<UserControl
    x:Class="SfRadialMenuTest.WPF.Views.HeaderComponent"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SfRadialMenuTest.WPF.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
    xmlns:viewmodels="clr-namespace:SfRadialMenuTest.WPF.ViewModels"
    d:DataContext="{d:DesignInstance Type=viewmodels:MainWindowViewModel}"
    mc:Ignorable="d">
    <Grid Panel.ZIndex="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Orientation="Vertical">
            <StackPanel Orientation="Horizontal">

                <TextBlock
                    Grid.Column="1"
                    Margin="6,0,0,2"
                    VerticalAlignment="Bottom"
                    FontSize="34"
                    Text="{Binding Title, FallbackValue=Header}">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Style.Triggers>
                                <!--  When saturated, change color  -->
                                <DataTrigger Binding="{Binding IsWarning}" Value="True">
                                    <Setter Property="Foreground" Value="Orange" />
                                </DataTrigger>
                                <!--  When error, override to error colors  -->
                                <DataTrigger Binding="{Binding IsError}" Value="True">
                                    <Setter Property="Foreground" Value="Red" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </StackPanel>

            <Border
                Margin="0,0,0,0"
                BorderBrush="Black"
                BorderThickness="0,0,0,2">
                <Border.Effect>
                    <DropShadowEffect
                        BlurRadius="10"
                        Direction="280"
                        ShadowDepth="3" />
                </Border.Effect>
            </Border>
        </StackPanel>

        <Grid HorizontalAlignment="Right" VerticalAlignment="Top">
            <Grid.Style>
                <Style TargetType="Grid">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding RadialMenuIsOpen}" Value="True">
                            <DataTrigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ThicknessAnimation
                                            Storyboard.TargetProperty="Margin"
                                            From="0,0,0,0"
                                            To="0,0,240,0"
                                            Duration="0:0:0.5">
                                            <ThicknessAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseInOut" />
                                            </ThicknessAnimation.EasingFunction>
                                        </ThicknessAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </DataTrigger.EnterActions>
                            <DataTrigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ThicknessAnimation
                                            Storyboard.TargetProperty="Margin"
                                            From="0,0,240,0"
                                            To="0,0,0,0"
                                            Duration="0:0:0.5">
                                            <ThicknessAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseInOut" />
                                            </ThicknessAnimation.EasingFunction>
                                        </ThicknessAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </DataTrigger.ExitActions>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Grid.Style>
            <WrapPanel>
                <Image
                    Height="46"
                    Margin="0,0,140,0"
                    VerticalAlignment="Top"
                    Source="/Resources/Images/syncfusion-full.png" />
            </WrapPanel>
        </Grid>

        <Grid
            Grid.Row="0"
            Grid.RowSpan="2"
            Margin="0,-144,-124,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Panel.ZIndex="100">
            <Grid.Style>
                <Style TargetType="Grid">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding RadialMenuIsOpen}" Value="True">
                            <DataTrigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ThicknessAnimation
                                            Storyboard.TargetProperty="Margin"
                                            From="0,-144,-124,0"
                                            To="45,45,45,45"
                                            Duration="0:0:0.6">
                                            <ThicknessAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseInOut" />
                                            </ThicknessAnimation.EasingFunction>
                                        </ThicknessAnimation>

                                    </Storyboard>
                                </BeginStoryboard>
                            </DataTrigger.EnterActions>
                            <DataTrigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ThicknessAnimation
                                            Storyboard.TargetProperty="Margin"
                                            From="45,45,45,45"
                                            To="0,-144,-124,0"
                                            Duration="0:0:0.6">
                                            <ThicknessAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseInOut" />
                                            </ThicknessAnimation.EasingFunction>
                                        </ThicknessAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </DataTrigger.ExitActions>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Grid.Style>
            <local:SfRadialMenuControl />
        </Grid>
    </Grid>
</UserControl>
